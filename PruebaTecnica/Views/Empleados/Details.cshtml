@model PruebaTecnica.Models.Empleado

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles empleado</h1>

<div>
    <hr />
    <dl class="row">

        <dd class="col-sm-12">
            <img src="@ViewData["Imagen"] " width="150" height="150" alt="">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCompleto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cedula)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cedula)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class="col-sm-2">
            Edad
        </dt>
        <dd class="col-sm-10">
            @ViewData["Edad"]
        </dd>
        <dt class="col-sm-2">
            Años laborando
        </dt>
        <dd class="col-sm-10">
            @ViewData["Ingreso"]
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdAreaNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdAreaNavigation.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdJefeNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdJefeNavigation.Cedula)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-warning fas fa-edit" style="color:#FFF;" asp-route-id="@Model.IdEmpleado"> Editar</a> |
    <a  class="btn btn-dark fas fa-arrow-alt-circle-left" asp-action="Index"></a>
</div>
