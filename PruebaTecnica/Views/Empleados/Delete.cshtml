@model PruebaTecnica.Models.Empleado

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>¿Desea borrar este registro?</h3>
<div>
    <h4>Empleado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCompleto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cedula)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cedula)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </dt>
        <dd class="col-sm-10">
            @(Model.FechaNacimiento.HasValue ? Convert.ToDateTime(Model.FechaNacimiento).ToString("dd/MM/yyyy") : String.Empty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaIngreso)
        </dt>
        <dd class="col-sm-10">
            @(Model.FechaIngreso.HasValue ? Convert.ToDateTime(Model.FechaIngreso).ToString("dd/MM/yyyy") : String.Empty)
        </dd>
        <dt class="col-sm-2">
            Área
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdAreaNavigation.Nombre)
        </dd>
        <dt class="col-sm-2">
            Jefe
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdJefeNavigation.NombreCompleto)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdEmpleado" />
        <button type="submit" class="btn btn-danger"> <i class="fas fa-trash-alt"></i> Eliminar </button>
        <a class="btn btn-dark fas fa-arrow-alt-circle-left" asp-action="Index"> Regresar</a>
    </form>
</div>
